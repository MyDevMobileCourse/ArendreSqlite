<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="6dp">
    <HorizontalScrollView
        android:id="@+id/user_item_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:fillViewport="true">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:id="@+id/labelprenom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom et Prenom :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nomprenomF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohamed youssef" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/dateNaiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Date de naissance :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_naissanceF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20/01/2001" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/labelemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Email :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="youssef.chlendi@gmail.com" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:id="@+id/label_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Login :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/loginF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="youssef" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:id="@+id/label_Tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Tel :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/telF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22332233" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:text="Edit" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:backgroundTint="#E91E63"

                android:text="Delete" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.cardview.widget.CardView>